file = {:home/laura/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Perez-Rosas et al. - 2015 - Kinetics on demand is a simple mathematical solution that fits recorded caffeine-induced luminal SR Ca2 chan.pdf:pdf},
issn = {19326203},
journal = {PLoS ONE},
number = {9},
pages = {1--22},
pmid = {26390403},
title = {{Kinetics on demand is a simple mathematical solution that fits recorded caffeine-induced luminal SR Ca2+ changes in smooth muscle cells}},
